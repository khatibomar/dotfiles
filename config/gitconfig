[alias]
  # Enhanced alias section
  a = add
  aa = add -A
  ap = add -p
  aliases = !git config --get-regexp alias | sed -re 's/alias\\.(\\S*)\\s(.*)$/\\1 âž” \\2/' | sort
  amend = commit --amend --no-edit
  amend-all = commit --amend -a
  br = branch -vv
  ci = commit -p
  co = checkout
  cp = cherry-pick
  dc = diff --cached
  ds = diff --staged
  ignore = update-index --skip-worktree
  unignore = update-index --no-skip-worktree
  redo = commit -c ORIG_HEAD
  st = status -s
  standup = log --since '1 day ago' --oneline --author $(git config user.email)
  undo = reset --soft HEAD~1
  unstage = reset HEAD --
  who = shortlog -n -s --
  wipe = clean -fd && git reset --hard
  
  # Enhanced logging
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lol = log --graph --decorate --oneline
  lola = log --graph --decorate --oneline --all
  
  # Safety first
  delete-merged-branches = !git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d
  recent = for-each-ref --sort=-committerdate --format='%(committerdate:relative) %(refname:short) %(objectname:short)' refs/heads

[user]
  email = elkhatibomar@outlook.com
  name = khatibomar
  signingkey = 023BC121E6D0ADEF
  # Use conditional includes for different projects
  [includeIf "gitdir:~/work/"]
    path = ~/work/.gitconfig

[commit]
  gpgsign = true
  template = ~/.gitmessage.txt
  verbose = true

[core]
  editor = nvim
  autocrlf = input
  excludesfile = ~/.gitignore_global
  whitespace = -trailing-space
  filemode = false
  symlinks = false
  fsmonitor = true  
  trustctime = false
  ignorecase = false

[diff]
  tool = nvimdiff
  guitool = nvimdiff
  algorithm = histogram  
  renames = true
  mnemonicprefix = true

[difftool]
  prompt = false
  guiDefault = false

[merge]
  tool = sgdm
  conflictstyle = zdiff3
  ff = only  
  commit = false
  stat = true

[mergetool]
  keepBackup = false
  prompt = false

[mergetool.sgdm]
  cmd = sgdm -merge -result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"

[rerere]
  enabled = true  
  autoupdate = true

[push]
  default = upstream
  followTags = true
  autoSetupRemote = true  

[pull]
  rebase = merges  
  ff = only

[rebase]
  autoStash = true
  autoSquash = true
  missingCommits = error
  instructionFormat = %an <%ae> %ai: %s
  stat = true

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
  interactive = auto

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "status"]
  added = green
  changed = yellow
  untracked = red

[interactive]
  diffFilter = diff --color-words

[protocol]
  version = 2  

[init]
  defaultBranch = main

[advice]
  detachedHead = false  
  statusHints = false
  addEmptyPathspec = false

[url "ssh://git@github.com/"]
  insteadOf = https://github.com/
