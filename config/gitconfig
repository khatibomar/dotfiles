[commit]
  gpgsign = true
  template = ~/.gitmessage.txt
  verbose = true

[core]
  editor = nvim
  autocrlf = input
  excludesfile = ~/.gitignore_global
  whitespace = -trailing-space
  filemode = false
  symlinks = false
  fsmonitor = true
  trustctime = false
  ignorecase = false
  pager = delta --features=line-numbers,decorations
  precomposeUnicode = true
  quotepath = false

[diff]
  tool = nvimdiff
  algorithm = histogram
  renames = true
  mnemonicprefix = true
  colorMoved = default
  colorMovedWS = allow-indentation-change

[difftool]
  prompt = false
  guiDefault = false

[difftool "nvimdiff"]
  cmd = $HOME/.local/bin/git-nvimdiff diff \"$LOCAL\" \"$REMOTE\"

[merge]
  tool = meld
  conflictstyle = zdiff3
  autoStash = true

[mergetool]
  keepBackup = false
  prompt = false

[mergetool "meld"]
  cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
  trustExitCode = true

[delta]
  navigate = true
  light = false
  side-by-side = true
  line-numbers = true
  syntax-theme = Dracula
  plus-style = "syntax #012800"
  minus-style = "syntax #340001"
  hunk-header-decoration-style = "blue box"
  hunk-header-file-style = "red"
  hunk-header-line-number-style = "#067a00"
  hunk-header-style = "file line-number syntax"

[rerere]
  enabled = true
  autoupdate = true

[push]
  default = upstream
  followTags = true
  autoSetupRemote = true

[pull]
  ff = only

[rebase]
  autoStash = true
  autoSquash = true
  missingCommits = error
  instructionFormat = %an <%ae> %ai: %s
  stat = true

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
  interactive = auto

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "status"]
  added = green
  changed = yellow
  untracked = red

[interactive]
  diffFilter = delta --color-only --features=interactive

[feature]
  manyFiles = true
  experimental = false

[index]
  version = 4

[pack]
  useSparse = true

[status]
  showUntrackedFiles = all
  submoduleSummary = true

[fetch]
  prune = true
  prunetags = true
  writeCommitGraph = true

[log]
  date = iso

[protocol]
  version = 2

[init]
  defaultBranch = main

[advice]
  detachedHead = false
  statusHints = false
  addEmptyPathspec = false

[url "ssh://git@github.com/"]
  insteadOf = https://github.com/
